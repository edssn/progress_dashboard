{{< core/popover_region }}
    {{$classes}}popover-region-progress-dashboard{{/classes}}

    {{$attributes}}
        id="nav-progress-dashboard-popover-container"
    {{/attributes}}

    {{$togglelabel}}{{#str}} toggleprogressdashboardmenu, local_progress_dashboard {{/str}}{{/togglelabel}}

    {{$togglecontent}}
        {{#pix}} icon, local_progress_dashboard, {{#str}} toggleprogressdashboardmenu, local_progress_dashboard {{/str}} {{/pix}}
    {{/togglecontent}}

    {{$headertext}}{{#str}} pluginname, local_progress_dashboard {{/str}}{{/headertext}}

    {{$content}}
        <div class="progress_dashboard-navbar-menu">
            {{#items}}
                <a href="{{{url}}}" {{#title}}title="{{.}}"{{/title}}
                   class="progress-dashboard-navbar-menu-item
                    {{#active}}progress-dashboard-navbar-menu-item-active{{/active}}
                       {{#dimmed}}dimmed_text{{/dimmed}}">
                    {{#name}}{{.}}{{/name}}
                </a>
            {{/items}}
        </div>
    {{/content}}
{{/ core/popover_region }}

{{#js}}
require(['jquery', 'core/popover_region_controller'], function($, controller) {
    var container = $('#nav-progress-dashboard-popover-container');
    var controller = new controller(container);
    controller.registerListNavigationEventListeners();
});
{{/js}}
